// create clock on css
clock(size, circleWidth, arrowsWidth, cirlceColor, hourColor, minuteColor)
  halfSize = size / 2
  width                  size
  height                 size
  display                inline-block
  border-radius          halfSize
  border                 circleWidth solid cirlceColor
  
  


  minuteArrowLen = halfSize - circleWidth

  &:before
    display             block
    content             ""
    width               arrowsWidth
    height              minuteArrowLen
    background-color    minuteColor
    margin-left         minuteArrowLen
    transform-origin    50% 100%
    transform           rotate(-10deg)
    transition          all 1s ease

  hourArrowLen = round(.67 * (halfSize - circleWidth))
  topMargin    = - hourArrowLen
  &:after
    display               block
    content               ""
    width                 arrowsWidth
    height                hourArrowLen
    background-color      hourColor
    margin-left           minuteArrowLen
    margin-top            topMargin
    transform-origin      50%  100%
    transform             rotate(10deg)
    transition            all 1.5s ease


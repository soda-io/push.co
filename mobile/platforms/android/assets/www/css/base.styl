// 
// Progress bar consist of 2 containers and content block
// 
generateProgressBar(container1, container2, content_block, cont1_height, cont2_border_height, cont1_bg_color, cont2_bg_color, cont2_box_shadow_col, big_b_radius, b_radius)
  {container1}
    bbr = unit(big_b_radius, px)
    margin                      0 auto
    padding                     b_radius
    height                      unit(cont1_height, px)
    background-color            cont1_bg_color
    display                     block
    border-radius               bbr

    {container2}
      h = unit(cont1_height - 1 - 2 * cont2_border_height, px)
      br = unit(b_radius, px)
      width                     100%
      height                    h
      border-radius             br
      display                   block
      box-shadow                inset 0px 1px 2px 0px cont2_box_shadow_col
      background-color          cont2_bg_color
      
      {content_block}
        display                 inline-block
        float                   left
        height                  h
        border-radius           br


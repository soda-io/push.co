makeCube(w,h=w,m=0,psp=1200px)
  oneHalf = w / 2
  .wrapp
    width               w
    height              h
    perspective-origin  50% 50%
    perspective         psp

  .cube
     height             h
     position           relative
     margin             m auto
     width              w
     preserve3d()


     .face
       height                  h
       position                absolute
       width                   w
       backface-visibility     hidden
       box-sizing              border-box 
       -moz-box-sizing         border-box 
       -webkit-box-sizing      border-box       

       &.one
         transform              rotateX(90deg) translateZ(oneHalf)

       &.two
         transform              translateZ(oneHalf)

       &.three
         transform              rotateY(90deg) translateZ(oneHalf)

       &.four
         transform              rotateY(180deg) translateZ(oneHalf)

       &.five
         transform              rotateY(-90deg) translateZ(oneHalf)

       &.six
         transform              rotateX(-90deg) translateZ(oneHalf) rotate(180deg)

